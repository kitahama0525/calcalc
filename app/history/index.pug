extends /inc/foundation/_base.pug
block append config
  - current.id = "history" // ページのID
  - current.title = "履歴" // タイトル
  - current.description = "これは履歴の説明文です" // 説明文
  - current.bodyClass = "top" // body に付与するクラス
  - current.depth = 2 // ページの階層

block body
  main.l-main
    h2.c-heading.is-xlg 履歴

    +c.table-log.is-history
      table.c-table
        thead
          tr
            th 日付
            th カロリー
            th たんぱく質
            th 脂質
            th 炭水化物
            th メモ
        tbody
          +loop(30)
            tr
              td 2020年7月12日（日）9:00
              td 300kcal
              td 25g
              td 10g
              td 30g
              td メモメモ



